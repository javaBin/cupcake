{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "eclipse-temurin"
      ],
      "allowedVersions": "<=22"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "eclipse-temurin"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "gradle"
      ],
      "matchDatasources": [
        "maven"
      ],
      "matchPackageNames": [
        "org.jetbrains.kotlinx:kotlinx-datetime"
      ],
      "allowedVersions": "!/-0\\.6\\.x-compat$/"
    }
  ]
}